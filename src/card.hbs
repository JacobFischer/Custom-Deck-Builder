<!--<svg width="750px" height="1050px">-->
  <defs>
    <filter id="shadow">
      <feDropShadow dx="4" dy="8" stdDeviation="0"/>
    </filter>
  </defs>
  <!-- width="750" height="523" -->
  <!-- Background images -->
  <image xlink:href="{{imageURL}}" x="0" y="117" width="750" height="523" preserveAspectRatio="xMidYMid slice"/>
  <image xlink:href="{{backgroundTypeImage}}" x="0" y="0" width="750px" height="1050"/>
  <rect class="variant-text-background" x="0", y="719" width="750", height="224" />
  <image xlink:href="{{logoURL}}" x="614" y="26" width="100px" height="350px" preserveAspectRatio="xMidYMin meet"/>
  <image xlink:href="{{backgroundVPImage}}" x="0" y="0" width="750px" height="1050"/>
  <image xlink:href="{{backgroundCostImage}}" x="0" y="0" width="750px" height="1050"/>

  <!-- Text -->
  <text class="card-name" x="40", y="120" transform="scale(1 0.75)" filter="url(#shadow)">{{name}}</text>

  <!-- Card type bannar -->
  {{#if type}}
  <text class="card-type card-maintype" x="40", y="933" transform="scale(1 0.75)">{{type}}</text>
  {{#if subtype}}
  <text class="card-type card-subtype" text-anchor="end" x="710", y="933" transform="scale(1 0.75)">{{subtype}}</text>
  {{/if}}
  {{/if}}

  <!-- Main body text -->
  <text class="card-text" x="40" y="764" width="670" style="font-size: {{textSize}}px;"></text>

  <!-- Bottom -->
  <text class="card-copyright" x="224" y="937">{{copyright}}</text>
  <text class="card-legal" x="224" y="972" width="330"></text>

  {{#if set}}
  <path class="card-set-background" fill="{{setBackgroundColor}}"/>
  <text class="card-set-text" text-anchor="end" x="542" y="1248" transform="scale(1 0.75)" style='fill: {{setTextColor}}'>{{set}}</text>
  {{/if}}

  {{#if vpVariableImage}}
  <image xlink:href="{{vpVariableImage}}" x="0" y="0" width="750px" height="1050"/>
  {{else}}
  <text class="card-vp vp-{{vpType}}" text-anchor="middle" x="87", y="1320" transform="scale(1 0.75)">{{vp}}</text>
  {{/if}}
  <text class="card-cost-back" text-anchor="middle" x="640", y="982">{{cost}}</text>
  <text class="card-cost" text-anchor="middle" x="640", y="982">{{cost}}</text>

<!--</svg>-->